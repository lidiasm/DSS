<!-- Vendedor BPEL Process [Generated by the Eclipse BPEL Designer] -->
<!-- Date: Sat Dec 21 10:45:09 CET 2019 -->
<bpel:process name="Vendedor"
         targetNamespace="http://Vendedor"
         suppressJoinFailure="yes"
         xmlns:tns="http://Vendedor"
         xmlns:bpel="http://docs.oasis-open.org/wsbpel/2.0/process/executable"
         >

    <!-- Import the client WSDL -->
	<bpel:import location="VendedorArtifacts.wsdl" namespace="http://Vendedor" 
	        importType="http://schemas.xmlsoap.org/wsdl/" />
         
    <!-- ================================================================= -->         
    <!-- PARTNERLINKS                                                      -->
    <!-- List of services participating in this BPEL process               -->
    <!-- ================================================================= -->         
    <bpel:partnerLinks>
        <!-- The 'client' role represents the requester of this service. -->
        <bpel:partnerLink name="client"
                     partnerLinkType="tns:Vendedor"
                     myRole="VendedorProvider"
                     />
    </bpel:partnerLinks>
  
    <!-- ================================================================= -->         
    <!-- VARIABLES                                                         -->
    <!-- List of messages and XML documents used within this BPEL process  -->
    <!-- ================================================================= -->         
    <bpel:variables>
        <!-- Reference to the message passed as input during initiation -->
        <bpel:variable name="input"
                  messageType="tns:VendedorRequestMessage"/>
                  
        <!-- 
          Reference to the message that will be returned to the requester
          -->
        <bpel:variable name="output"
                  messageType="tns:VendedorResponseMessage"/>
        <bpel:variable name="VendedorResponse" messageType="tns:VendedorResponseMessage"></bpel:variable>
        <bpel:variable name="VendedorRequest" messageType="tns:VendedorRequestMessage"></bpel:variable>
    </bpel:variables>

    <!-- ================================================================= -->         
    <!-- ORCHESTRATION LOGIC                                               -->
    <!-- Set of activities coordinating the flow of messages across the    -->
    <!-- services integrated within this business process                  -->
    <!-- ================================================================= -->         
    <bpel:sequence name="main">
        
        <!-- Receive input from requester. 
             Note: This maps to operation defined in Vendedor.wsdl 
             -->
        <bpel:receive name="receiveInput" partnerLink="client"
                 portType="tns:Vendedor"
                 operation="process" variable="input"
                 createInstance="yes"/>
        
        <!-- Generate reply to synchronous request -->
        <bpel:if name="ifExisteProducto">
            <bpel:condition expressionLanguage="urn:oasis:names:tc:wsbpel:2.0:sublang:xpath1.0"><![CDATA[$VendedorRequest.payload/tns:Producto = $VendedorResponse.payload/tns:Producto]]></bpel:condition>
            <bpel:sequence name="Sequence">
                <bpel:reply name="precioOriginal" partnerLink="client" operation="process" portType="tns:Vendedor" variable="VendedorResponse"></bpel:reply>
                <bpel:receive name="primeraOferta" partnerLink="client" operation="process" portType="tns:Vendedor" createInstance="no" variable="VendedorRequest"></bpel:receive>
                <bpel:while name="While">
                    <bpel:condition expressionLanguage="urn:oasis:names:tc:wsbpel:2.0:sublang:xpath1.0"><![CDATA[$VendedorRequest.payload/tns:Precio < $VendedorResponse.payload/tns:Precio]]></bpel:condition>
                    <bpel:sequence name="Sequence1">
                        <bpel:reply name="precioRebajado" partnerLink="client" operation="process" portType="tns:Vendedor" variable="VendedorResponse"></bpel:reply>
                        <bpel:receive name="nuevaOferta" partnerLink="client" operation="process" portType="tns:Vendedor" variable="VendedorRequest"></bpel:receive>
                    </bpel:sequence>
                </bpel:while>
                <bpel:reply name="confirmaPrecio" partnerLink="client" operation="process" portType="tns:Vendedor" variable="VendedorResponse"></bpel:reply>
                <bpel:receive name="peticionCompra" partnerLink="client" operation="process" portType="tns:Vendedor" variable="VendedorRequest"></bpel:receive>
                <bpel:reply name="confirmaCompra" partnerLink="client" operation="process" portType="tns:Vendedor" variable="VendedorResponse"></bpel:reply>
            </bpel:sequence>
            <bpel:else>
                <bpel:sequence>
                    
                    <bpel:reply name="noExisteProducto" partnerLink="client" operation="process" portType="tns:Vendedor" variable="VendedorResponse"></bpel:reply>
                </bpel:sequence>
            </bpel:else>
        </bpel:if>
        
    </bpel:sequence>
</bpel:process>

