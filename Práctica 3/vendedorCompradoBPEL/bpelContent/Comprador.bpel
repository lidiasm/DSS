<!-- Comprador BPEL Process [Generated by the Eclipse BPEL Designer] -->
<!-- Date: Thu Dec 26 13:19:57 CET 2019 -->
<bpel:process name="Comprador"
         targetNamespace="http://Comprador"
         suppressJoinFailure="yes"
         xmlns:tns="http://Comprador"
         xmlns:bpel="http://docs.oasis-open.org/wsbpel/2.0/process/executable"
         xmlns:ns1="http://Vendedor">

    <!-- Import the client WSDL -->
    <bpel:import namespace="http://Vendedor" location="VendedorArtifacts.wsdl" importType="http://schemas.xmlsoap.org/wsdl/"></bpel:import>
    <bpel:import location="CompradorArtifacts.wsdl" namespace="http://Comprador" 
	        importType="http://schemas.xmlsoap.org/wsdl/" />
         
    <!-- ================================================================= -->         
    <!-- PARTNERLINKS                                                      -->
    <!-- List of services participating in this BPEL process               -->
    <!-- ================================================================= -->         
    <bpel:partnerLinks>
        <!-- The 'client' role represents the requester of this service. -->
        <bpel:partnerLink name="client"
                     partnerLinkType="tns:Comprador"
                     myRole="CompradorProvider"
                     />
        <bpel:partnerLink name="Vendedor" partnerLinkType="ns1:Vendedor" partnerRole="VendedorProvider"></bpel:partnerLink>
    </bpel:partnerLinks>
  
    <!-- ================================================================= -->         
    <!-- VARIABLES                                                         -->
    <!-- List of messages and XML documents used within this BPEL process  -->
    <!-- ================================================================= -->         
    <bpel:variables>
        <!-- Reference to the message passed as input during initiation -->
        <bpel:variable name="input"
                  messageType="tns:CompradorRequestMessage"/>
                  
        <!-- 
          Reference to the message that will be returned to the requester
          -->
        <bpel:variable name="output"
                  messageType="tns:CompradorResponseMessage"/>
        <bpel:variable name="CompradorResponse" messageType="tns:CompradorResponseMessage"></bpel:variable>
        
        <bpel:variable name="VendedorResponse" messageType="ns1:VendedorResponseMessage"></bpel:variable>
        
        
        <bpel:variable name="CompradorRequest" messageType="tns:CompradorRequestMessage"></bpel:variable>
        
        
        <bpel:variable name="VendedorRequest" messageType="ns1:VendedorRequestMessage"></bpel:variable>
    </bpel:variables>

    <!-- ================================================================= -->         
    <!-- ORCHESTRATION LOGIC                                               -->
    <!-- Set of activities coordinating the flow of messages across the    -->
    <!-- services integrated within this business process                  -->
    <!-- ================================================================= -->         
    <bpel:sequence name="main">
        
        <!-- Receive input from requester. 
             Note: This maps to operation defined in Comprador.wsdl 
             -->
        <bpel:receive name="receiveInput" partnerLink="client"
                 portType="tns:Comprador"
                 operation="process" variable="input"
                 createInstance="yes"/>
        
        <!-- Generate reply to synchronous request -->
        <bpel:invoke name="hacerOferta" partnerLink="Vendedor" operation="process" portType="ns1:Vendedor" outputVariable="VendedorResponse" inputVariable="VendedorRequest"></bpel:invoke>
        <bpel:if name="ifExisteProducto">
            <bpel:condition expressionLanguage="urn:oasis:names:tc:wsbpel:2.0:sublang:xpath1.0"><![CDATA[$CompradorRequest.payload/tns:Producto = $CompradorResponse.payload/tns:Producto]]></bpel:condition>
            <bpel:sequence name="Sequence">
                <bpel:invoke name="primeraOferta" partnerLink="Vendedor" operation="process" portType="ns1:Vendedor" inputVariable="VendedorRequest" outputVariable="VendedorResponse"></bpel:invoke>
                <bpel:while name="While">
                    <bpel:condition expressionLanguage="urn:oasis:names:tc:wsbpel:2.0:sublang:xpath1.0"><![CDATA[$VendedorResponse.payload/tns:Precio != $CompradorResponse.payload/tns:Precio]]></bpel:condition>
                    <bpel:invoke name="ofertasSucesivas" partnerLink="Vendedor" operation="process" portType="ns1:Vendedor" inputVariable="VendedorRequest" outputVariable="VendedorResponse"></bpel:invoke>
                </bpel:while>
                <bpel:invoke name="comprarProducto" partnerLink="Vendedor" operation="process" portType="ns1:Vendedor" inputVariable="VendedorRequest" outputVariable="VendedorResponse"></bpel:invoke>
                <bpel:reply name="compraRealizada" partnerLink="client" operation="process" portType="tns:Comprador" variable="CompradorResponse"></bpel:reply>
            </bpel:sequence>
            <bpel:else>
                <bpel:reply name="noExisteProducto" partnerLink="client" operation="process" portType="tns:Comprador" variable="CompradorResponse"></bpel:reply>
            </bpel:else>
        </bpel:if>
        
    </bpel:sequence>
</bpel:process>

